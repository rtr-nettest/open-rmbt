	-->
    	        
    <include 
        android:layout_weight="1"
        android:id="@+id/test_view_info_container"
        layout="@layout/test_view_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" />
    	        
